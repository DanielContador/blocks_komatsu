<div class="block_dlwelcome">
</div>
<div class="_dl_content_block_info ">

    {{#infouser}}
        <div class="row">
            <div class="col-lg-4">
                <span></span>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-8 img-profile">
                <div class="row">
                    <div class="col-lg-4">
                        <span class="picture-profile">
                           <img src="{{image_profile}}" class="img-fluid custom-square">
                        </span>
                    </div>
                    <div class="col-lg-8">
                        <ul>
                            <li class="nameuser new"><h3 class="bold">{{name_user}}</h3></li>
                            <li class="role"><span class="roles">{{all_my_roles}}</span></li>
                            <li class="edit"><a class="btn btn-secundary" href="{{link_profile}}">{{#str }}view_edit_user, block_dlfrontuserinfo{{/str }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row counting-data">
            <div class="row">
                <div class="col-lg-12 ">
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 content-courses">
                        <div class="row d-flex">
                            <div class="col-lg-3 dl-icons">
                                <span class="flex-icon ft-fw ft tfont-var-book"</span>
                            </div>
                            <div class="col-lg-9">
                                <h2 class="text-center">{{#str }}courses, block_dlfrontuserinfo{{/str }} {{#str }}completed, block_dlfrontuserinfo{{/str }}s</h2>
                               <span class="results">{{courses_completed}}/{{courses_enrolled}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 content-programs">
                        <div class="row d-flex">
                            <div class="col-lg-3 dl-icons">
                                <span class="flex-icon ft-fw ft tfont-var-check-square"</span>
                            </div>
                            <div class="col-lg-9">
                                <h2 class="text-center">{{#str }}programs, block_dlfrontuserinfo{{/str }} {{#str }}completed, block_dlfrontuserinfo{{/str }}s</h2>
                                <span class="results">{{programs_completed}}/{{programs_assigned}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 content-competences">
                        <div class="row d-flex">
                            <div class="col-lg-3 dl-icons">
                                <span class="flex-icon ft-fw ft tfont-var-pie-chart"</span>
                            </div>
                            <div class="col-lg-9">
                                <h2 class="text-center">{{#str }}skills, block_dlfrontuserinfo{{/str }}</h2>
                                <span class="results">{{competencies_perform}}%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/infouser}}
</div>

    